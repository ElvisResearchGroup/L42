$ = Class.Relax:JsonBase:{ Value = { read method S toJson() } }

@Public String = { read method S toJson() = (
  @ToJson S inner = this.that()
  S.dq()++inner++S.dq() 
  )} 
@Public Number = { read method S toJson() = (
  @ToJson S inner = this.that()
  inner
  )}
@Public Bool = {
  True =  { read method S toJson() = S"true"  }
  False = { read method S toJson() = S"false" }
  }
@Public Null = { read method S toJson() = S"null" }
@Public Object = { read method S toJson() = S.StringBuilder()((
  \append(S"{")
  var first=This3.Bool.true()
  read @ToJson $.Object self = this
  for (key,val) in self (
    if first ( first:=This3.Bool.false() )
    else ( \append(S", ") )
    \append(key.toJson())
    \append(S": ")
    \append(val.toJson())
    )
  \append(S"}")
  )).toS()
  }
@Public Array = { read method S toJson() = S.StringBuilder()((
  \append(S"[")
  read @ToJson $.Array self=this
  \append(self.left().toJson())
  for val in self.vals(1\ to=\size) (
    \append(S", ")
    \append(val.toJson())
    )
  \append(S"]")
  )).toS()
  }