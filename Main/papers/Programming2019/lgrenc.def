%     \DeclareTextCommand{\LGR@A@hiatus}{LGR}{A}
%     \DeclareTextCommand{\LGR@E@hiatus}{LGR}{E}
%
%     \DeclareTextCompositeCommand{\LGR@A@hiatus}{LGR}{}{A}
%     \DeclareTextCompositeCommand{\LGR@A@hiatus}{LGR}{I}{A\"I}
